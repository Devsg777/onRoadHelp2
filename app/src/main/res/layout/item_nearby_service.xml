<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_provider_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        tools:src="@drawable/icons8_google"
        tools:visibility="visible"
        android:contentDescription="Provider Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Provider Name" />

        <TextView
            android:id="@+id/text_provider_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Service Type" />

        <TextView
            android:id="@+id/text_provider_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="1.5 km" />

        <TextView
            android:id="@+id/text_provider_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="123-456-7890"
            tools:visibility="visible" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_call"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="false"
        android:focusable="false"
        android:src="@android:drawable/ic_menu_call"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="Call Provider" />

</LinearLayout>